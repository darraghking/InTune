<Page x:ConnectionId='1'
    x:Class="InTune.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:InTune"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:data="using:InTune.Model"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <!-- Navigation Bars -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <RelativePanel>
            <!-- Show Category Button -->
            <Button x:ConnectionId='11' Name="butCategoryButton" 
                    RelativePanel.AlignLeftWithPanel="True" 
                                                    
                    FontFamily="Segoe MDL2 Assets"
                    FontSize="20"
                    Height="50"
                    Width="50"
                    Content="&#xE700;"
                    />
            
            <!-- Back Button -->
            <Button x:ConnectionId='12' Name="butBackButton" 
                    RelativePanel.RightOf="butCategoryButton" 
                                               
                    FontFamily="Segoe MDL2 Assets"
                    FontSize="20"
                    Height="50"
                    Width="50"
                    Content="&#xE0A6;"
                    />
            
            <!-- Search Bar -->
            <AutoSuggestBox x:ConnectionId='13' Name="SearchAutoSuggestBox" 
                            PlaceholderText="Search for Sound" 
                            Width="200"
                            QueryIcon="Find"
                            Margin="0,5,10,0"
                                                                          
                                                                                
                            RelativePanel.AlignRightWithPanel="True" 
                            />
        </RelativePanel>

        <!-- Everything in the main body -->
        <SplitView x:ConnectionId='2' Grid.Row="1" 
                   Name="mySplitView" 
                   DisplayMode="CompactOverlay" 
                   CompactPaneLength="50"
                   OpenPaneLength="200">
            <SplitView.Pane>
                <ListView x:ConnectionId='3' Name="MenuItemsListView" 
                          IsItemClickEnabled="True" 
                                                           
                                                                 >
                    <ListView.ItemTemplate>
                        <DataTemplate                           >
                            <StackPanel x:ConnectionId='4' Orientation="Horizontal">
                                <Image x:ConnectionId='5'                           
                                       Height="40"                                      
                                       Width="40" 
                                       Margin="-10,10,0,10"
                                       />
                                <TextBlock x:ConnectionId='6'                         
                                           FontSize="18" 
                                           Margin="10,0,0,0" 
                                           VerticalAlignment="Center"
                                           />
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </SplitView.Pane>
            <SplitView.Content>
                <!-- Whats being displayed in the main section -->
                <Grid Margin="20,0,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <!-- Allows you to play sound -->
                    <MediaElement x:ConnectionId='7' Name="MyMediaElement" AutoPlay="True" />

                    <!-- Default text / header -->
                    <TextBlock x:ConnectionId='8' Name="CategoryTextBlock" Text="All Sounds" FontSize="24" Margin="0,0,0,5" />

                    <!-- Under header -->
                    <GridView x:ConnectionId='9' Grid.Row="1" 
                              Name="SoundGridView"
                              SelectionMode="None"
                              IsItemClickEnabled="True"
                                                           
                                                                  >
                        <GridView.ItemTemplate>
                            <DataTemplate                        >
                                <Image x:ConnectionId='10' Name="MyImage" Height="120" Width="110"                            />
                            </DataTemplate>
                        </GridView.ItemTemplate>
                    </GridView>
                </Grid>
            </SplitView.Content>
        </SplitView>
    </Grid>
</Page>

